<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ydx.test1">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="test1.permission.READ" />
    <uses-permission android:name="test1.permission.WRITE" />
    <uses-permission android:name="test1.permission.READ_ALL" />

    <permission android:name="test1.permission.READ"
        android:label="@string/permission_read"
        android:description="@string/permission_read_summary"
        android:protectionLevel="dangerous" />

    <permission android:name="test1.permission.READ_ALL"
        android:label="@string/permission_read_all"
        android:description="@string/permission_read_all_summary"
        android:protectionLevel="dangerous" />

    <permission android:name="test1.permission.WRITE"
        android:label="@string/permission_write"
        android:description="@string/permission_write_summary"
        android:protectionLevel="dangerous"/>

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeLight">
        <activity
            android:name=".welcomescreen.WelcomeScreenActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".iconlist.AppIconsActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".utils.PackageChangeStatusReceiver"
            android:enabled="true"
            android:exported="false"
            android:priority="0">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <activity android:name=".contacts.AllContactsActivity"/>
        <provider
            android:authorities="com.ydx.test1.urls"
            android:name=".provider.URLContentProvider"
            android:exported="true">
            <path-permission android:pathPrefix="/URLS/common"
                android:readPermission="test1.permission.READ"
                android:writePermission="test1.permission.WRITE" />
            <path-permission android:pathPrefix="/URLS/read_all"
                android:readPermission="test1.permission.READ_ALL" />
        </provider>

        <service
            android:name=".imageloader.ImageService"
            android:exported="false">
        </service>

    </application>
</manifest>